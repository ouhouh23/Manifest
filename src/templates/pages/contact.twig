{% extends '../layouts/_base.twig' %}

{% set page = 'Contact' %}

{% block content %}
  <section class="contact-us">
    <h1 class="heading">Contact us</h1>

    <p class="contact-us__paragraph">
      If you need our help with your user account, have questions about 
      how to use the platform or are experiencing technical difficulties,
      please do not hesitate to contact us.
    </p>

    <div>
      <h3 class="heading-secondary">Contact information</h3>

      <address class="address">
        <span class="address__item">
          486 Rahi street, Berlin .98 Germany
        </span>

        <a class="address__item" href="tel:+48601366816">
          <i class="fa-solid fa-phone"></i>

          +48 601 366 816
        </a>

        <a class="address__item" href="mailto:company@support.com">
          <i class="fa-solid fa-envelope"></i>

            company@support.com
        </a>
      </address>

      <h3 class="heading-secondary">
        Follow Us
      </h3>

      <div class="contact-us__social-networks social-networks social-networks_horizontal">
        <a href="#">
          <i class="fa-brands fa-facebook-f"></i>
        </a>

        <a href="#">
          <i class="fa-brands fa-twitter"></i>
        </a>

        <a href="#">
          <i class="fa-brands fa-linkedin-in"></i>
        </a>

        <a href="#">
          <i class="fa-brands fa-dribbble"></i>
        </a>
      </div>
    </div>

    <form class="form indent-bottom" action="#">
      <div>
        <label class="form__label" for="contact-name">
          Name*
        </label>

        <input 
          class="form__input" 
          type="text" 
          name="contact-name" 
          id="contact-name" 
          placeholder="Walter Moss" 
          required 
        />
      </div>

      <div>
        <label class="form__label" for="contact-email">
          Email*
        </label>

        <input 
          class="form__input" 
          type="email" 
          name="contact-email"
          id="contact-email" 
          placeholder="Info@manifest.com" 
          required 
        />
      </div>

      <div class="select">
        <select class="select__body">
          <option value="" hidden>
            Reason for contact
          </option>

          <option value="1">
            Know about the product
          </option>

          <option value="2">
            Need help or assistance
          </option>

          <option value="3">
            Have a complaint
          </option>

          <option value="4">
            Other   
          </option>
        </select>
      </div>
      
      <div>
        <label class="form__label" for="contact-text">
          Message*
        </label>

        <input 
          class="form__input" 
          type="text" 
          name="contact-text"
          id="contact-text" 
          placeholder="Hi there..." 
          required 
        />
      </div>

      <input 
        class="button button_tight form__button" 
        type="submit" 
        name="Send" 
        value="Send &#8594" 
      />
    </form>
  </section>
{% endblock %}
