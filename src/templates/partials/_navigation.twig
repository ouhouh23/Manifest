{% set navigation = { 
  './index.html': 'Home',
  './about.html': 'About', 
  './blog.html': 'Blog', 
  './contact.html': 'Contact', 
  './works.html': 'Works' 
} %}

<nav class="navigation">
  <ul class="navigation__content">
    {% for url, name in navigation %}
      <li class="navigation__item{% if name == page %} navigation__item_active {% endif %}">
        <a href="{{ url }}">{{ name }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>
