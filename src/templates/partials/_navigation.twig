{% set navigation = { 
  './index.html': 'Home',
  './about.html': 'About', 
  './blog.html': 'Blog', 
  './contact.html': 'Contact' 
  , './works.html': 'Works' 
} %}

<nav class="navigation">
  <ul class="navigation__content">
    {% for current, name in navigation %}
      <li 
        {% if name == page %}
          class="navigation__item navigation__item_active"
        {% else %}
          class="navigation__item" 
        {% endif %}
      >
        <a href="{{ current }}">{{ name }}</a>
      </li>
    {% endfor %}
  </ul>
</nav>
